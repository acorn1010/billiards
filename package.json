{
  "name": "billiards",
  "description": "Billiards",
  "version": "0.3.1",
  "author": "tailuge",
  "main": "dist/main.js",
  "license": "GPL-3.0",
  "engines": {
    "yarn": "1.x"
  },
  "scripts": {
    "test": "jest --verbose",
    "coverage": "jest --coverage --coverageReporters json",
    "dev": "webpack ",
    "prettify": "prettier --write --trailing-comma es5 --no-semi {src,test}/**/*.[jt]s dist/*.{css,html} *.[jt]s *.json dist/lobby.js",
    "markdownlint": "npx markdownlint-cli2 README.md --fix",
    "serve": "webpack serve",
    "servegitpod": "webpack serve --client-web-socket-url $(gp url 8080 | sed 's/http/ws/' | sed 's#$#/ws#')",
    "deps": "npx yarn-check --skip-unused",
    "websocket": "nodemon src/server/server.ts"
  },
  "nodemonConfig": {
    "watch": [
      "src/server"
    ],
    "ext": "ts",
    "delay": "2",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "dependencies": {
    "interactjs": "^1.10.18",
    "three": "^0.155.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/three": "^0.155.1",
    "chai": "^4.3.8",
    "ini": "^4.1.1",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "mocha": "^10.2.0",
    "node-notifier": "^10.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
